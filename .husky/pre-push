echo "Starting pre-push checks..."

echo "Running build..."
npm run build
if [ $? -ne 0 ]; then
    echo "Build failed. Please fix the errors before pushing."
    exit 1
fi

echo "Running tests..."
npm run test
if [ $? -ne 0 ]; then
    echo "Tests failed. Please fix the errors before pushing."
    exit 1
fi

echo "Pre-push checks passed. Committing changes."