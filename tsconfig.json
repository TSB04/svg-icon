{
    "compilerOptions": {
      "target": "ESNext",               
      "module": "ESNext",                
      "moduleResolution": "Node",        
      "outDir": "dist",                  
      "rootDir": "src",                  
      "strict": true,                    
      "esModuleInterop": true,           
      "declaration": true,               
      "resolveJsonModule": true,         
      "allowSyntheticDefaultImports": true, 
      "jsx": "react-jsx"                
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  